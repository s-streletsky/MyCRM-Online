@using Microsoft.AspNetCore.Mvc.Localization
@using MyCRM_Online.ViewModels.Account
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = @Localizer["Title"];
}

@model LoginViewModel

<h2>@Localizer["Title"]</h2>

<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Email"></label><br />
        <input class="form-control" style="width: 350px;" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">@SharedLocalizer["Password"]</label><br />
        <input class="form-control" style="width: 350px;" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <input asp-for="RememberMe" />
        <label asp-for="RememberMe">@Localizer["RememberMe"]</label>        
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="@Localizer["LogIn"]" />
        <a class="btn btn-outline-primary" asp-action="GoogleLogin">@Localizer["LogInWithGoogle"]</a>
    </div>
</form>
<br />
@Localizer["DontHaveAccount"]?
<br />
<a asp-area="" asp-controller="Account" asp-action="Register">@Localizer["Register"]</a>
@using Microsoft.AspNetCore.Mvc.Localization
@using MyCRM_Online.ViewModels.Payments
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer["TitleEditPayment"];
}

@model PaymentEditViewModel

<div class="text-center">
    <h1 class="display-4">@SharedLocalizer["TitleEditPayment"]</h1>

    <div class="text-align-left ">
        <a class="btn btn-outline-secondary" asp-action="Index">@SharedLocalizer["BackToPayments"]</a>
    </div>
    <br>

    <form class="text-align-left" asp-antiforgery="true" asp-action="Edit" asp-controller="Payments">
        <div>
            <div class="form-group">
                <label asp-for="Amount">* @SharedLocalizer["Amount"]</label>
                <input class="form-control" type="text" asp-for="Amount" />
                <span class="color-red" asp-validation-for="Amount"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes">@SharedLocalizer["Notes"]</label>
                <input class="form-control" type="text" asp-for="Notes" />
                <span class="color-red" asp-validation-for="Notes"></span>
            </div>
            <div class="form-group text-align-right">
                <input hidden asp-for="Id" />
                <input class="btn btn-primary" type="submit" value="@SharedLocalizer["Save"]" />
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }